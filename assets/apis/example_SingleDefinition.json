{
    "name" : "example",
    "active" : true,
    "proxy" : {
        "preserve_host" : false,
        "listen_path" : "/example/*",
        "upstreams" : {
            "balancing": "roundrobin",
            "targets": [
                {"target": "http://localhost:9089/hello-world"}
            ]
        },
        "strip_path" : false,
        "append_path" : false,
        "methods" : ["GET"]
    },
    "plugins": [
        {
            "name": "rate_limit",
            "enabled": true,
            "config": {
                "limit": "5-M",
                "policy": "local"
            }
        }
    ],
    "circuit_breaker":{
      "timeout": 3000,
      "max_concurrent_requests": 10,
      "request_volume_threshold": 20,
      "sleep_window": 5000,
      "error_percent_threshold": 50
    },
    "health_check": {
        "url": "http://localhost:9089/status",
        "timeout": 3
    }
}
